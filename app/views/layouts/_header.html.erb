<header class="header navbar nabvar-fixed-top">
  <div>
    <%= link_to 'カットハウスオレンジ', root_path, id: "logo" %>
      
    <div>
      <ul class="nav navbar-nav navbar-center">
        <li><%= link_to 'ホーム', root_url, class: "nav" %></li>
        <li><%= link_to 'メニュー☆料金', '#', class: "nav" %></li>
        <li><%= link_to 'スタッフ紹介', '#', class: "nav" %></li>
        
      </ul>    
    </div>

    <div>
      <ul class="nav navbar-nav navbar-right">
        <% if customer_signed_in? %>
            【<%= link_to current_customer.name, customer_path(current_customer) %> さん】
            <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: "btn btn-sm btn-info nav-login" %>
        <% elsif user_signed_in? %>
          【スタッフ <%= link_to current_user.name, user_path(current_user) %> さん】
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-sm btn-info nav-login" %>
        <% else %>
        <% end %>
      </ul>
    </div>
  </div>
</header>