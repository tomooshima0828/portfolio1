<h1>管理者専用ページ</h1>

<div class="container">
<%= link_to '<<メニュー&料金一覧に戻る', menus_path(current_user), style: "font-size: 16px;" %>
<p class="center">【メニュー詳細】</p>
<table class="table table-bordered table-condensed table-striped table-account">
  <thead>
    <tr>
      <th class="table-head-1">サービス番号</th>
      <th class="table-head-1">サービス名</th>
      <th class="table-head-1">税込価格</th>
      
    </tr>
  </thead>
  <tbody>
    <tr class="center">
      <td><%= @menu.item_number %></td>
      <td><%= @menu.item %></td>
      <td><%= @menu.price.to_s(:delimited) %></td>
      
    </tr>
  </tbody>
  <thead><tr><th colspan="3" class="table-head-1">詳細</th></tr></thead>
  <tbody><tr><td class="center" colspan="3"><%= @menu.description %></td></tr></tbody>
</table>
</div>

